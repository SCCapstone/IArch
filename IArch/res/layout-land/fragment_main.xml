<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dirt"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.IArch.MainActivity$MainFragment" >

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/camera_button"
        android:layout_alignRight="@+id/map_button"
        android:layout_gravity="center"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="8"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="44sp"
        android:textStyle="bold" 
        android:layout_marginBottom="8dp"/>
       
    <ImageButton
        android:id="@+id/camera_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/app_title"
        android:layout_marginRight="8dp"
        android:background="@drawable/button_round"
        android:gravity="center_vertical"
        android:onClick="takePicture"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:src="@drawable/camera_only"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="10dp"
         />

    <Button
        android:id="@+id/map_button"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:layout_below="@+id/app_title"
        android:layout_toRightOf="@+id/camera_button"
        android:layout_alignTop="@+id/camera_button"
        android:text="@string/map"
        android:background="@drawable/button_main"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textSize="22sp"
        android:onClick="displayMap"
        android:layout_marginLeft="8dp"
         />
      
    <Button
        android:id="@+id/project_mgmt_button"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:layout_alignLeft="@+id/map_button"
        android:layout_below="@+id/map_button"
        android:layout_marginTop="8dp"
        android:text="@string/project_management"
        android:background="@drawable/button_main"
        android:textColor="#FFFFFF"        
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textSize="22sp"
        android:onClick="gallery"
         />

    <Button
        android:id="@+id/link_button"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:layout_below="@+id/project_mgmt_button"
        android:layout_alignLeft="@+id/map_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_main"
        android:textColor="#FFFFFF"        
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textSize="22sp"
        android:text="@string/button_send" 
        android:layout_alignBottom="@+id/camera_button"/>
    
</RelativeLayout>
</ScrollView>
