<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.IArch.TakePicture" 
    android:background="@drawable/background_tile"
    >

    <ImageView
    	android:id="@+id/imageView1"
    	android:contentDescription="@string/image"
        android:layout_width="wrap_content"
    	android:layout_height="300dp"
         />
    
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_alignLeft="@+id/imageView1"
        android:text="@string/date" 
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_toRightOf="@+id/date"
        android:layout_marginLeft="25dp"
        android:text="@string/gps"
        android:textColor="#FFFFFF"
         />

    <EditText
        android:id="@+id/project_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/textView1"
        android:hint="@string/project_hint"
        android:textColorHint="#FFFFFF"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:background="@drawable/text_border"
        android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ
        	abcdefghijklmnopqrstvwxyz-_. "
        android:paddingLeft="10dp"	
        android:textSize="25sp"
        android:textCursorDrawable="@drawable/cursor_style"
        	 />
    
     <EditText
        android:id="@+id/location_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/project_name"
        android:hint="@string/location_hint"
        android:textColorHint="#FFFFFF"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:background="@drawable/text_border"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        android:textCursorDrawable="@drawable/cursor_style"
         />
    
    <!--<EditText
        android:id="@+id/artifact_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/location_name"
        android:hint="@string/artifact_hint"
        android:inputType="text" />-->
        
    <Spinner
        android:id="@+id/artifact_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/location_name"
        android:drawSelectorOnTop="true"
        android:prompt="@string/artifact_hint" 
        android:textColor="#FFFFFF"
        style="@style/spinner_style"
        android:popupBackground="#000000"
        android:background="@drawable/text_border"
        />

    <EditText
        android:id="@+id/description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/artifact_name"
        android:hint="@string/description_hint"
        android:textColorHint="#FFFFFF"
        android:inputType="textMultiLine" 
        android:textColor="#FFFFFF"
        android:background="@drawable/text_border"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        android:textCursorDrawable="@drawable/cursor_style"
        />
    
    
     <Button
        android:id="@+id/sync"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView1"
        android:text="@string/sync" 
        android:textColor="#FFFFFF"
        android:background="@drawable/button_sub"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textSize="25sp"
        />

</RelativeLayout>
