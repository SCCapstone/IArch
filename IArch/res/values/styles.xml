<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textColor">#FFFFFF</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="spinner_style" parent="@android:style/Theme.Holo">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:dropDownListViewStyle">@style/dropdownList</item>
    </style>
    
	    <style name="SpinnerItem" parent="@android:style/Theme.Holo">
	        	<item name="android:textColor">#FFFFFF</item>
	            <item name="android:background">@android:color/transparent</item>
        		<item name="android:padding">10dp</item>
       			<item name="android:textSize">25sp</item>
	    </style>
	    <style name="SpinnerDropDownItem" parent="@android:style/Theme.Holo">
	        	<item name="android:textColor">#FFFFFF</item>
	            <item name="android:background">@android:color/black</item>
	            <item name="android:padding">10dp</item>
        		<item name="android:textSize">25sp</item>
	    </style>
    	<style name="dropdownList" parent="android:Widget.ListView.DropDown">
    		<item name="android:divider">#FFFFFF</item>
    		<item name="android:dividerHeight">1dp</item>
		</style>
</resources>